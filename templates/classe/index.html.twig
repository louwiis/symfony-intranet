{% extends 'base.html.twig' %}

{% block title %}Every classes!{% endblock %}

{% block schoolId %}{{ schoolId }}{% endblock %}

{% block body %}
<div class="col-d-8">
		<h3 class="pb-4 mb-4 fst-italic border-bottom">
			Classes
		</h3>

		<article class="blog-post w-100">
			<p>if you want to add a new classe, <a href="{{ path('classe_new', {'schoolId': schoolId}) }}" class="text-primary">click here</a>.</p>

			<table class="table">
				<thead>
					<tr>
						<th>Name</th>
						<th>School</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for classe in classes %}
					<tr>
							<td>{{ classe.name }}</td>
							<td>{{ classe.school.name }}</td>
							<td>
								<a href="{{ path('classe_show', {'classeId': classe.id, 'schoolId': schoolId}) }}" class="text-primary">show</a>
								<a href="{{ path('classe_edit', {'classeId': classe.id, 'schoolId': schoolId}) }}" class="text-primary">edit</a>
							</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</article>


	</div>
{% endblock %}
