<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body style="height: 100vh;">
		<header class="d-flex flex-wrap justify-content-center py-3 border-bottom">
			<a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
				<svg class="bi me-2" width="40" height="32">
					<use xlink:href="#bootstrap"></use>
				</svg>
				<span class="fs-4">Intranet</span>
			</a>
		</header>

		<div class="d-flex" style="height: calc(100% - 73px)">
			<div class="h-100 d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px;">
				<ul class="nav nav-pills flex-column mb-auto">
					<li>
						<a href="/{{ block('schoolId') }}/classe" class="{{ activePage=='classe' ? 'active' :'link-dark' }} nav-link">
							<svg class="bi pe-none me-2" width="16" height="16">
								<use xlink:href="#table"></use>
							</svg>
							Classes
						</a>
					</li>
					<li>
						<a href="/{{ block('schoolId') }}/lesson" class="{{ activePage=='lesson' ? 'active' :'link-dark' }} nav-link">
							<svg class="bi pe-none me-2" width="16" height="16">
								<use xlink:href="#speedometer2"></use>
							</svg>
							Lessons
						</a>
					</li>
					<li>
						<a href="/{{ block('schoolId') }}/student" class="{{ activePage=='student' ? 'active' :'link-dark' }} nav-link">
							<svg class="bi pe-none me-2" width="16" height="16">
								<use xlink:href="#speedometer2"></use>
							</svg>
							Students
						</a>
					</li>
					<li>
						<a href="/{{ block('schoolId') }}/grade" class="{{ activePage=='grade' ? 'active' :'link-dark' }} nav-link">
							<svg class="bi pe-none me-2" width="16" height="16">
								<use xlink:href="#speedometer2"></use>
							</svg>
							Grades
						</a>
					</li>
				</ul>
				<hr>
			</div>

			<main class="overflow-scroll p-4 w-100">
        {% block body %}{% endblock %}
			</main>
		</div>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
	</body>
	</html>
